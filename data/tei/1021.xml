            <handDesc hands="2">
              <handNote xml:id="handNote1" medium="unknown" scope="major" script="syr-x-syrm">
                This manuscript is written in a good, regular, Malkite hand.
              </handNote>
              <handNote xml:id="handNote2" medium="unknown" scope="minor" script="syr">
